<div class="px-4 py-4 mx-auto text-center">
  <h1>Your exchanges</h1>
</div>

<div class="container"></div>


<table class="table">
  <thead>
    <tr>
      <th>Base</th>
      <th>Target</th>
      <th>Amount</th>
      <th>Weeks</th>
      <th colspan="3"><%= link_to 'New exchange', new_exchange_path, :class => "btn btn-primary btn-sm" %></th>
    </tr>
  </thead>
  <tbody>
    <% @exchanges.each do |exchange| %>
      <tr>
        <td>
          <%= exchange.base %>
        </td>
        <td>
          <%= exchange.target %>
        </td>
        <td>
          <%= exchange.amount %>
        </td>
        <td>
          <%= exchange.weeks %>
        </td>
        <td>
          <%= link_to 'Details', exchange_path(exchange), :class => "btn btn-primary btn-sm" %>
        </td>
        <td>
          <%= link_to 'Edit', edit_exchange_path(exchange), :class => "btn btn-primary btn-sm" %>
        </td>
        <td>
          <%= link_to 'Delete', exchange_path(exchange), 
            method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %>
        </td>
      </tr>
      <% end %>
        <tbody>
</table>